# ===========================================
# AnIntelligentAI Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ===========================================
# APP SETTINGS
# ===========================================
APP_NAME="Salim AI Assistant"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development

# ===========================================
# API SETTINGS
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# ===========================================
# SECURITY (REQUIRED - CHANGE IN PRODUCTION!)
# ===========================================
# Generate: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here!
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# DATABASE (PostgreSQL with async driver)
# ===========================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/salim_ai
DATABASE_ECHO=false

# ===========================================
# REDIS (Short-term Memory)
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true

# ===========================================
# QDRANT (Vector Database)
# ===========================================
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=user_memories
QDRANT_VECTOR_SIZE=1536
QDRANT_ENABLED=true

# ===========================================
# LLM API KEYS (At least one required)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-ai-api-key-here

# Default LLM Settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_CHAT_MODEL=gpt-4-turbo-preview
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

# ===========================================
# MEMORY SETTINGS
# ===========================================
SHORT_TERM_MAX_MESSAGES=50
SHORT_TERM_TTL_HOURS=24
VECTOR_SEARCH_TOP_K=5
VECTOR_SCORE_THRESHOLD=0.7

# ===========================================
# RAG SETTINGS
# ===========================================
RAG_CHUNK_SIZE=400
RAG_CHUNK_OVERLAP=80
RAG_MIN_CHUNK_SIZE=50

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# ===========================================
# BANKING CONFIGURATION
# ===========================================
# Plaid API (US, Canada banking)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Supported countries
BANKING_COUNTRIES=["CA","US","KE"]

# Export settings
EXPORT_DIR=./exports
EXCEL_TEMPLATE_DIR=./templates
DAILY_BALANCE_CHECK_HOUR=6
WEEKLY_TRANSACTION_EXPORT_DAY=0

# ===========================================
# STOCK TRADING
# ===========================================
# Alpaca API
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Interactive Brokers (Optional)
IB_ACCOUNT_ID=your-ib-account-id
IB_API_PORT=7497

# Stock data
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key

# ===========================================
# TRAVEL CONFIGURATION
# ===========================================
# Amadeus API
AMADEUS_API_KEY=your-amadeus-api-key
AMADEUS_API_SECRET=your-amadeus-api-secret
AMADEUS_ENV=test

# Skyscanner
SKYSCANNER_API_KEY=your-skyscanner-api-key

# Priceline Partner
PRICELINE_API_KEY=your-priceline-api-key
PRICELINE_MEMBER_ID=your-priceline-member-id
PRICELINE_MEMBERSHIP_TIER=platinum

# Expedia Affiliate
EXPEDIA_API_KEY=your-expedia-api-key
EXPEDIA_SHARED_SECRET=your-expedia-shared-secret

# Car Rentals
ENTERPRISE_API_KEY=your-enterprise-api-key
HERTZ_API_KEY=your-hertz-api-key

# Travel monitoring
TRAVEL_PRICE_CHECK_INTERVAL_MINUTES=30
TRAVEL_ALERT_PRICE_DROP_PERCENT=5.0

# ===========================================
# RESEARCH CONFIGURATION
# ===========================================
# Legal research
CANLII_API_KEY=your-canlii-api-key
COURTLISTENER_API_KEY=your-courtlistener-api-key
WESTLAW_API_KEY=your-westlaw-api-key

# General research
SERPAPI_API_KEY=your-serpapi-api-key
TAVILY_API_KEY=your-tavily-api-key

# Document storage
DOCUMENTS_DIR=./documents
MAX_DOCUMENT_SIZE_MB=50

# ===========================================
# VOICE CONFIGURATION
# ===========================================
WHISPER_MODEL=whisper-1
DEEPGRAM_API_KEY=your-deepgram-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
TTS_VOICE_ID=default

# ===========================================
# NOTIFICATIONS
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=admin@example.com
ACCOUNTANT_EMAIL=accountant@example.com
